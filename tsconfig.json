{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,        
        "declaration": true,
        "target": "ES5",
        "module": "ES2020",
        "strict": true,
        "lib": ["ES2020", "DOM"]
      },
      "include": [
        "src/**/*"
      ],
      "exclude": [
        "node_modules",
        "dist"
      ]
}